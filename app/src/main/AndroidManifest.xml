<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.eoma.clipboard">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcherx"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcherx"
        android:supportsRtl="true"
        android:theme="@style/Theme.Clipboard">
        <activity
            android:name=".MainActivity"
            android:exported="true" android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ClipboardService" android:exported="true"/>
    </application>

</manifest>